#version 430

layout(local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout (binding = 0, rgba8) uniform image2D inputImage;
layout (binding = 1, rgba8) uniform image2D outputImage;

const int coeff[5][5] = {
{1, 4, 6, 4, 1},
{4, 16, 24, 16, 4},
{6, 24, 36, 24, 6},
{4, 16, 24, 16, 4},
{1, 4, 6, 4, 1}
};
        
void main()
{
    ivec2 coords = ivec2(gl_GlobalInvocationID.xy);
    vec4 color = vec4(0.0);
            
    for (int i = -2; i <= 2; i++)
    {
        for (int j = -2; j <= 2; j++)
        {
            ivec2 offset = ivec2(i,j);
            vec4 colorBlurred = vec4(imageLoad(inputImage, coords + offset).xyz, 1.0);
            color += colorBlurred * coeff[i + 2][j + 2];
        }
    }
    color = color/256;
    imageStore(outputImage, coords, color); // Ã‰criture dans l'image de sortie
}